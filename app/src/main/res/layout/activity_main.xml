<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/a"
    android:background="#fff6fdff">


    <fr.polytech.spcarton.fisheye.DeformImageView
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:id="@+id/imageView"
        android:src="@drawable/charlie3"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/seekBarZ"
        android:scaleType="centerCrop"
        />

    <SeekBar
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarZ"
        android:layout_above="@+id/seekBarR"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Z"
        android:id="@+id/textView"
        android:layout_column="3"
        android:layout_alignTop="@+id/seekBarZ"
        android:layout_above="@+id/textView2"

        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarR"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="R"
        android:id="@+id/textView2"
        android:layout_toLeftOf="@+id/seekBarR"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>
